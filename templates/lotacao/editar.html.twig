{% extends "base.html.twig" %}
{% block header %}

    <a href="{{ path('index_geral') }}" class="navbar-brand" title="Home">
        <i class="glyphicon glyphicon-home"></i>
    </a>

    <div class="fundo-topo-menu">
        Editar Especializada / Divisão
    </div>

{% endblock %}

{% block content %}
    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="container">
                <div class="col-md-12 col-xs-12">
                    {{ form_start(form) }}
                    <div class="col-md-8 col-xs-12">
                        {{ form_row(form.descricao, {'label':'Descrição'}) }}
                    </div>
                    <br>
                    <div class="col-md-4 col-xs-12">
                        <input type="submit" value="Enviar" class="btn btn-primary"/>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        {{ form_row(form.tiposdeato, {'label':'Tipos de Ato'}) }}
                    </div>
                    <div class="col-md-6 col-xs-12">
                        {{ form_row(form.tiposdeprocesso, {'label':'Tipos de Processo'}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}