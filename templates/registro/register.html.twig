{% extends "base.html.twig" %}
{% block header %}

    <a href="{{ path('index_geral') }}" class="navbar-brand" title="Home">
        <i class="glyphicon glyphicon-home"></i>
    </a>

    <div class="fundo-topo-menu">
        Cadastro de Usuário
    </div>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-xs-12 col-md-offset-3">
                {{ form_start(form) }}
                <div class="col-md-12 col-xs-12">
                    {{ form_row(form.nome, {'label':'Nome completo'}) }}
                </div>
                <div class="col-md-12 col-xs-12">
                    {{ form_row(form.email, {'label':'E-mail'}) }}
                </div>
                <div class="col-md-6 col-xs-12">
                    {{ form_row(form.plainPassword.first, {'label':'Senha'}) }}
                </div>
                <div class="col-md-6 col-xs-12">
                    {{ form_row(form.plainPassword.second, {'label':'Repita a senha'}) }}
                </div>
                <div class="col-md-12 col-xs-12">
                    {{ form_row(form.lotacao, {'label':'Lotação'}) }}
                </div>
                <div class="col-md-12 col-xs-12">
                    {{ form_row(form.roles, {'label':'Perfis de Acesso'}) }}
                </div>
                <div class="col-md-12 col-xs-12">
                    <input class="btn btn-primary" type="submit" value="Enviar" />
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}